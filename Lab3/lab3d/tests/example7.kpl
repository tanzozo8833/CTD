PROGRAM TestVarParam;
VAR 
    x : INTEGER;

(* Thủ tục Swap yêu cầu tham biến VAR, tức là phải truyền biến để thay đổi giá trị *)
PROCEDURE Swap(VAR a : INTEGER; VAR b : INTEGER);
VAR temp : INTEGER;
BEGIN
    temp := a;
    a := b;
    b := temp;
END;

BEGIN
    x := 10;
    
    (* Hợp lệ *)
    CALL Swap(x, x);
    
    (* LỖI: Truyền hằng số (10) vào tham số VAR *)
    CALL Swap(x, 10);
    
    (* LỖI: Truyền biểu thức (x+1) vào tham số VAR *)
    CALL Swap(x, x + 1);
END.