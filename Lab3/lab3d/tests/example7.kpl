PROGRAM TestType;
VAR 
    i : INTEGER;
    c : CHAR;
BEGIN
    i := 10;
    c := 'A';
    
    (* LỖI 1: Gán Char cho Integer *)
    i := c; 
    
    (* LỖI 2: Cộng Integer với Char *)
    i := i + c;
    
    (* LỖI 3: Điều kiện trong IF khác kiểu *)
    IF i > c THEN i := 0;
END.


PROGRAM TestArray;
VAR 
    A : ARRAY(. 10 .) OF INTEGER;
    i : INTEGER;
    c : CHAR;
BEGIN
    c := 'x';
    
    (* LỖI 1: Chỉ số mảng là Char, phải là Integer *)
    A(. c .) := 5;
    
    (* LỖI 2: Sử dụng biến đơn như mảng *)
    i(. 1 .) := 5;
END.


